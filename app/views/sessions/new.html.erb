<% content_for :hide_header, true %>

<div class="min-h-screen flex flex-col-reverse lg:flex-row">
  <!-- Left Side - Marketing Content (Dark) - Hidden on mobile -->
  <div class="hidden lg:flex flex-1 bg-stone-900 text-white p-8 lg:p-12 xl:p-16 flex-col justify-center">
    <div class="max-w-xl mx-auto w-full space-y-12">

      <!-- Branding -->
      <div class="space-y-4">
        <h1 class="font-serif text-5xl sm:text-6xl lg:text-7xl font-medium tracking-tight">
          Verbatim
        </h1>
        <p class="text-xl sm:text-2xl text-stone-300 font-light leading-relaxed">
          Master typing by reading the books you love
        </p>
      </div>

      <!-- Feature Highlights -->
      <div class="space-y-6">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-stone-800 flex items-center justify-center">
            <svg class="w-5 h-5 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-white mb-1">Your EPUB Library</h3>
            <p class="text-stone-400 text-sm leading-relaxed">
              Import any EPUB book and practice typing with content that captivates you
            </p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-stone-800 flex items-center justify-center">
            <svg class="w-5 h-5 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-white mb-1">Track Your Progress</h3>
            <p class="text-stone-400 text-sm leading-relaxed">
              Watch your skills improve with detailed progress tracking through each book
            </p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-stone-800 flex items-center justify-center">
            <svg class="w-5 h-5 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-white mb-1">Real-Time Metrics</h3>
            <p class="text-stone-400 text-sm leading-relaxed">
              Monitor your WPM, accuracy, and time as you type
            </p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-stone-800 flex items-center justify-center">
            <svg class="w-5 h-5 text-stone-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-white mb-1">Distraction-Free Focus</h3>
            <p class="text-stone-400 text-sm leading-relaxed">
              A clean, minimal interface designed for deep concentration
            </p>
          </div>
        </div>
      </div>

      <!-- Visual UI Preview/Mockup -->
      <div class="hidden sm:block">
        <div class="bg-stone-800 rounded-lg p-6 border border-stone-700">
          <!-- Stats Bar -->
          <div class="flex items-center justify-center gap-8 mb-6 pb-4 border-b border-stone-700">
            <div class="text-center">
              <div class="text-white font-mono text-2xl font-light">68</div>
              <span class="text-stone-500 text-xs">wpm</span>
            </div>
            <div class="text-center">
              <div class="text-white font-mono text-2xl font-light">97</div>
              <span class="text-stone-500 text-xs">accuracy</span>
            </div>
            <div class="text-center">
              <div class="text-white font-mono text-2xl font-light">2:34</div>
              <span class="text-stone-500 text-xs">time</span>
            </div>
          </div>

          <!-- Typing Preview Text -->
          <div class="font-mono text-sm leading-relaxed">
            <span class="text-white">It was a bright cold day in April, and the clocks were striking thirteen.</span><span class="inline-block w-0.5 h-4 bg-white ml-px animate-pulse"></span><span class="text-stone-500"> Winston Smith, his chin nuzzled into his breast in an effort to escape the vile wind, slipped quickly through the glass doors.</span>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Right Side - Login Form -->
  <div class="flex-1 bg-stone-900 lg:bg-stone-50 p-8 pt-16 lg:p-12 xl:p-16 flex flex-col justify-start lg:justify-center min-h-screen lg:min-h-0">
    <div class="max-w-sm mx-auto w-full">

      <!-- Mobile Branding - Hidden on desktop -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="font-serif text-4xl font-medium tracking-tight text-white mb-2">Verbatim</h1>
        <p class="text-stone-400">Master typing by reading books</p>
      </div>

      <!-- Login Card -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-200 p-8">
        <div class="space-y-6">

          <!-- Header - Hidden on mobile since branding is above -->
          <div class="hidden lg:block text-center">
            <h2 class="font-serif text-2xl font-medium text-stone-900 mb-1">Welcome back</h2>
            <p class="text-stone-500 text-sm">Sign in to continue reading</p>
          </div>

          <!-- Form -->
          <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>

            <div>
              <%= f.label :username, class: "block text-sm font-medium text-stone-700 mb-1" %>
              <%= f.text_field :username,
                  autofocus: true,
                  autocomplete: "username",
                  class: "w-full px-3 py-2 rounded-lg border border-stone-300 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent transition-shadow" %>
            </div>

            <div>
              <%= f.label :password, class: "block text-sm font-medium text-stone-700 mb-1" %>
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "w-full px-3 py-2 rounded-lg border border-stone-300 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent transition-shadow" %>
            </div>

            <div class="pt-2">
              <%= f.submit "Log in", class: "w-full bg-stone-900 text-white font-medium py-2.5 px-4 rounded-lg hover:bg-stone-800 transition-colors cursor-pointer" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
