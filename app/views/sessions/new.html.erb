<% content_for(:hide_header) { true } %>

<div class="min-h-screen flex items-center justify-center bg-stone-50 px-4">
  <div class="w-full max-w-sm">
    <div class="text-center mb-8">
      <h1 class="font-serif text-5xl font-medium tracking-tight text-stone-900 mb-2">Verbatim</h1>
      <p class="text-stone-500">A typing practice app for reading books</p>
    </div>

    <div class="bg-white border border-stone-200 rounded-lg p-6 shadow-sm">
      <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :username, class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-stone-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-stone-300 rounded focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent" %>
        </div>

        <%= f.submit "Log in", class: "w-full px-4 py-2 bg-stone-900 text-white font-medium rounded hover:bg-stone-800 transition-colors cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
