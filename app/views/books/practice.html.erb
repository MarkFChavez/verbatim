<% content_for :hide_header, true %>

<div class="min-h-screen bg-white flex flex-col"
     data-controller="typing"
     data-typing-passage-content-value="<%= @passage.content %>"
     data-typing-passage-id-value="<%= @passage.id %>"
     data-typing-next-url-value="<%= @passage.next_passage ? practice_book_path(@book) : book_path(@book) %>"
     data-typing-book-url-value="<%= book_path(@book) %>">

  <!-- Loading overlay -->
  <div data-typing-target="loading" class="hidden fixed inset-0 bg-white/90 flex items-center justify-center z-50">
    <div class="text-center">
      <svg class="animate-spin h-8 w-8 text-gray-900 mx-auto mb-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="text-gray-600">Loading next passage...</p>
    </div>
  </div>

  <!-- Minimal header -->
  <header class="px-6 py-4 flex items-center justify-between border-b border-gray-100">
    <div class="flex items-center gap-3">
      <%= link_to book_path(@book), class: "p-2 -ml-2 text-gray-400 hover:text-gray-600 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-sm font-medium text-gray-900"><%= @book.title %></h1>
        <p class="text-xs text-gray-400"><%= @chapter.title.presence || "Chapter #{@chapter.position}" %></p>
      </div>
    </div>

    <span class="text-sm text-gray-400">
      <%= @passage.position %> / <%= @chapter.passages.count %>
    </span>
  </header>

  <!-- Progress bar -->
  <div class="h-0.5 bg-gray-100">
    <div data-typing-target="progress" class="h-full bg-gray-900 transition-all duration-150 ease-out" style="width: 0%"></div>
  </div>

  <!-- Main typing area -->
  <main class="flex-1 flex flex-col items-center justify-center px-6 py-12 pb-20 cursor-text" data-action="click->typing#focusInput">
    <div class="max-w-2xl w-full">
      <div data-typing-target="display" class="font-mono text-2xl leading-relaxed tracking-wide font-medium">
        <!-- Characters rendered by Stimulus -->
      </div>

      <textarea data-typing-target="input"
                data-action="input->typing#handleInput keydown->typing#handleKeydown"
                class="sr-only"
                autocomplete="off"
                autocapitalize="off"
                autocorrect="off"
                spellcheck="false"></textarea>
    </div>
  </main>

  <!-- Sticky footer -->
  <footer class="fixed bottom-0 left-0 right-0 bg-white border-t border-gray-100 px-6 py-4">
    <div class="max-w-4xl mx-auto flex items-center justify-between text-sm">
      <!-- Shortcuts -->
      <div class="flex items-center gap-6 text-gray-400">
        <span class="flex items-center gap-2">
          <kbd class="px-2 py-1 bg-gray-50 border border-gray-200 rounded text-xs font-mono">Esc</kbd>
          <span>quit</span>
        </span>
        <span class="flex items-center gap-2">
          <kbd class="px-2 py-1 bg-gray-50 border border-gray-200 rounded text-xs font-mono">Tab</kbd>
          <span>restart</span>
        </span>
      </div>

      <!-- Source attribution -->
      <div class="text-gray-400">
        <%= @book.title %> Â· <%= @book.author %>
      </div>

      <!-- Branding -->
      <div class="text-gray-300">
        TypeLit
      </div>
    </div>
  </footer>
</div>

<style>
  /* Typed correctly - revealed as black */
  .typed-correct {
    color: #1a1a1a;
  }

  /* Typed incorrectly - red */
  .typed-incorrect {
    color: #ef4444;
  }

  /* Untyped */
  .untyped {
    color: rgb(200, 200, 200);
  }

  /* Newline indicator */
  .newline-char {
    font-size: 0.75em;
    opacity: 0.5;
  }

  .newline-char.typed-correct {
    opacity: 0.3;
  }

  /* Display container needs relative positioning for absolute caret */
  [data-typing-target="display"] {
    position: relative;
  }

  /* Blinking caret cursor - positioned absolutely to avoid text reflow */
  .caret {
    position: absolute;
    width: 2px;
    background-color: #1a1a1a;
    animation: blink 1s step-end infinite;
    pointer-events: none;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>
