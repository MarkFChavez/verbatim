<div class="bg-white border border-stone-200 rounded-lg p-6 mb-8"
     data-controller="progress-chart"
     data-progress-chart-url-value="<%= typing_stats_path %>">

  <div class="flex items-center justify-between mb-6">
    <h3 class="text-xl font-medium text-stone-700">Your Progress</h3>

    <div class="flex gap-2">
      <button type="button"
              data-range="7_days"
              data-action="click->progress-chart#selectRange"
              class="px-3 py-1 text-sm font-medium rounded bg-stone-700 text-white transition-colors">
        7 Days
      </button>
      <button type="button"
              data-range="30_days"
              data-action="click->progress-chart#selectRange"
              class="px-3 py-1 text-sm font-medium rounded bg-stone-200 text-stone-700 hover:bg-stone-300 transition-colors">
        30 Days
      </button>
      <button type="button"
              data-range="all_time"
              data-action="click->progress-chart#selectRange"
              class="px-3 py-1 text-sm font-medium rounded bg-stone-200 text-stone-700 hover:bg-stone-300 transition-colors">
        All Time
      </button>
    </div>
  </div>

  <div data-progress-chart-target="summary" class="mb-6"></div>

  <div class="relative h-64">
    <div data-progress-chart-target="loading" class="absolute inset-0 flex items-center justify-center">
      <div class="text-stone-400">
        <svg class="animate-spin h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </div>
    </div>

    <div data-progress-chart-target="empty" class="hidden absolute inset-0 flex flex-col items-center justify-center text-center">
      <svg class="w-12 h-12 text-stone-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      <p class="text-stone-500">No typing sessions yet</p>
      <p class="text-sm text-stone-400">Complete some passages to see your progress</p>
    </div>

    <canvas data-progress-chart-target="canvas" class="hidden"></canvas>
  </div>
</div>
